html
  head
    meta(charset="utf-8")
    title Demo: Tether

    script(src="../bower_components/platform/platform.js")
    link(rel="import", href="../bower_components/polymer/layout.html")
    script(src="../bower_components/jquery/dist/jquery.min.js")
    script(src="../bower_components/lodash/dist/lodash.min.js")
    link(rel="stylesheet", href="../bower_components/roboto-fontface/roboto-fontface.css")

    script(src="../bower_components/tether/js/utils.js")
    script(src="../bower_components/tether/js/constraint.js")
