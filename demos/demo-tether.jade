  body
    style.

      body {
        font-family: Roboto, Helvetica, Arial, sans-serif;
        -font-size: 1.2rem;
      }

      .container {
        max-width: 640px;
        margin: 0 auto;
      }

      .demo .elem {
        vertical-align: middle;
        text-align: center;
        padding: 10px;
        margin: 5px 10px;
      }

      .column.elem {
        margin: 10px !important;
      }

      .demo .gray {
        background: #ccc;
      }
      .demo .darkgray {
        background: #555;
        color: white;
      }

      .demo .row.big div {
        padding: 25px;
      }

      .demo .row div {
        text-align: center;
        padding: 10px;
        margin: 5px 10px;
      }

      .demo .row {
        padding: 5px;
        margin: 0;
      }

      .control {
        vertical-align: middle;
        text-align: center;
        margin: 10px 20px;
        padding: 10px;
        border: 1px solid gray;
      }

      .orange {
        text-align: center;
        padding: 8px 18px;
        background: orange;
      }

      * {
        box-sizing: border-box;
      }

      .orange {
        position: relative;
      }

      .orange.bottom:after {
        top: 100%;
        left: 50%;
        border-top: 8px solid orange;
        border-right: 8px solid transparent;
        border-left: 8px solid transparent;
        margin-left: -8px;
        margin-bottom: -8px;
      }

      .orange.left:after {
        top: 50%;
        left: 0%;
        border-top: 8px solid transparent;
        border-right: 8px solid orange;
        border-bottom: 8px solid transparent;
        margin-left: -8px;
        margin-top: -8px;
      }

      .orange.right:after {
        top: 50%;
        left: 100%;
        border-top: 8px solid transparent;
        border-left: 8px solid orange;
        border-bottom: 8px solid transparent;
        margin-right: -8px;
        margin-top: -8px;
      }

      .orange:after {
        content: "";
        position: absolute;
        z-index: 1;
      }

      .orange.-big-x {
        padding: 8px 32px !important;
      }

      .orange.-big-y {
        padding: 24px 18px !important;
      }

    div.container
      h2 1.1 Attachments

      div.demo#demo-attachment
        div.row.big(horizontal, layout)
          div.hidden(flex)
          div.elem.darkgray(flex, two) 0
          div.hidden(flex)
        div.elem.orange A

      h2 1.2 Offsets

      div.demo#demo-offset
        div.row.big(horizontal, layout)
          div.hidden(flex)
          div.elem.darkgray(flex, two) 0
          div.hidden(flex)
        div.elem.orange A

      h2 1.3 Constraints

      div.demo#demo-constraint
        div.row.big(horizontal, layout)
          div.control(flex) L
          div.elem.darkgray(flex, two) 0
          div.control(flex) R
        div.elem.orange A
        //div.elem.orange A

    div.container
      h2 2.1 Tooltips

      div.demo#demo-tooltip
        div.row(horizontal, layout)
          div.elem.gray(flex) 0
          div.elem.darkgray(flex) 1
          div.elem.gray(flex) 2
        div.row(horizontal, layout)
          div.elem.gray(flex) 3
          div.elem.gray(flex) 4
        div.row(horizontal, layout)
          div.elem.gray(flex) 5
        div.elem.orange.big-x A

      h2 2.2 Notes

      div.demo#demo-note
        div(horizontal, layout)
          div.column.control(flex) L
          div.column(flex, two)
            div.row(horizontal, layout)
              div.elem.gray(flex, one) 0
              div.hidden(flex, two)
            div.row(horizontal, layout)
              div.elem.darkgray(flex, two) 1
              div.hidden(flex, one)
            div.row(horizontal, layout)
              div.elem.gray(flex, three) 2
          div.column.control(flex) R
        div.elem.orange.big-y A

