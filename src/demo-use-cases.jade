    link(rel="stylesheet", href="demo.css")
    link(rel="stylesheet", href="tingler.css")
    script(src="demo.js")
    script(src="tingler.js")
    script(src="tingler/boxModelUtils.js")

    script(src="../bower_components/marked/lib/marked.js")

    link(rel="stylesheet", href="../bower_components/katex/katex.min.css")
    script(src="../bower_components/katex/katex.min.js")

    script(src="../bower_components/d3/d3.min.js")
    script(src="../bower_components/dagre-d3/js/dagre-d3.min.js")
